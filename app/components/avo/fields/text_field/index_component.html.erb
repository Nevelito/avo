<%= index_field_wrapper **field_wrapper_args do %>
  <div class="flex flex-row items-center justify-between space-x-1">
    <% if @field.as_html %>
      <%== @field.value %>
    <% elsif @field.protocol.present? %>
      <%= link_to @field.value, "#{@field.protocol}:#{@field.value}" %>
    <% else %>
      <%= link_to_if @field.link_to_record, @field.value, resource_view_path %>
    <% end %>
    <% if copyable? %>
      <%= render Avo::ClipboardComponent.new value: @field.value, view: 'index' %>
    <% end %>
  </div>
<% end %>
